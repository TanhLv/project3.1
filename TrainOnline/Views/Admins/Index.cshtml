@model IEnumerable<TrainOnline.Models.Admin>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<style>
    .table {
        border-collapse: collapse;
        width: 100%;
    }

        .table th,
        .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 2px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
            color: #212529;
            text-transform: uppercase;
            font-size: 12px;
            font-weight: 600;
        }

        .table td {
            vertical-align: middle;
        }

            .table td a {
                color: #007bff;
                text-decoration: none;
                transition: color 0.2s ease-in-out;
            }

                .table td a:hover {
                    color: #0056b3;
                    text-decoration: underline;
                }

                .table td a:not(:last-child) {
                    margin-right: 10px;
                }

            .table td:last-child {
                text-align: center;
            }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>

<h1>có mạng</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AdminId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AdminId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

