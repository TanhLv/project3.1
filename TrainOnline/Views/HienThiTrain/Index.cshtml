    <script>
        function showForm(id) {
            var forms = document.getElementsByClassName('form');
            for (var i = 0; i < forms.length; i++) {
                forms[i].classList.remove('active');
            }
            document.getElementById('form' + id).classList.add('active');
        }
    </script>
