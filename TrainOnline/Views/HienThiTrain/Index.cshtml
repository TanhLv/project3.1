
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form {
        display: none;
        max-width: 300px;
    }

        .form.active {
            display: block;
        }
    /* Ẩn tất cả các form trừ form đầu tiên */
    .form {
        display: none;
    }

    /* Kiểu cho các nút button */
    button {
        padding: 10px;
        margin-right: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    /* Kiểu cho các label và input */
    /* label {
          display: block;
          margin-top: 10px;

        } */

    fieldset {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
        font-size: 16px;
        font-weight: bold;
        color: #333;
        border-radius: 8px;
    }

    legend {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    input[type="text"] {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
        margin-top: 5px;
    }

    .form label, .form input[type="text"] {
        display: inline-block;
        width: 100%;
    }
</style>

